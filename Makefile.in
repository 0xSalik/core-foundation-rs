VPATH=%VPATH%

RUSTC ?= rustc
RUSTFLAGS ?=
EXT_DEPS ?=

RUST_SRC=$(shell find $(VPATH)/src -type f -name '*.rs')

.PHONY: all
all:    libcore_text.dummy

libcore_text.dummy: src/lib.rs $(RUST_SRC) $(EXT_DEPS)
	$(RUSTC) $(RUSTFLAGS) $< --out-dir .
	touch $@

core_text-test: src/lib.rs $(RUST_SRC) $(EXT_DEPS)
	$(RUSTC) $(RUSTFLAGS) $< -o $@ --test

.PHONY: check
check: core_text-test
	./core_text-test $(TEST)

.PHONY: clean
clean:
	rm -f *.o *.a *.so *.dylib *.rlib *.dll *.dummy *-test
